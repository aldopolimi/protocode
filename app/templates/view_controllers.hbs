<div class="row">
  <div>
    <div class="col-md-3">
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading" data-toggle="collapse" data-target="#collapse-views">
            <h3 class="panel-title">
              ViewControllers
            </h3>
          </div>
          <ul class="list-group" id="collapse-views" class="collapse in">
            {{#each item in controller item-controller="viewController"}}
              <li class="list-group-item">
                {{#link-to "viewController" item}}
                  {{#if item.launcher}}
                    <i class="fa fa-home"></i>
                  {{/if}}
                  {{item.name}}
                {{/link-to}}
              </li>
            {{/each}}
            {{#if isCreating}}
              <li class="list-group-item">
                <div class="input-group">
                  {{focus-input value=newNameViewController class="form-control" focus-out="createViewController" insert-newline="createViewController"}}
                  <span class="input-group-btn">
                    <button type="button" class="btn btn-default" {{action "createViewController"}}>
                      <i class="fa fa-save"></i>
                    </button>
                    <button type="button" class="btn btn-default" {{action "setCreating" false}}>
                      <i class="fa fa-times"></i>
                    </button>
                  </span>
                </div>
              </li>
            {{/if}}
          </ul>
          <div class="panel-footer">
            <div class="btn-group">
              <button type="button" class="btn btn-default" {{action "setCreating" true}}>
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading collapsed" data-toggle="collapse" data-target="#collapse-ui-control" style="cursor:pointer">
              UIControls (Drag and drop) <span style="float:right">&#9660;</span>
          </div>
          <div class="panel-body collapse" id="collapse-ui-control">
            {{#each controllers.uiControlTemplates itemController="uiControlTemplate"}}
              {{view App.UiControlTemplateView}}
            {{/each}}
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading collapsed" data-toggle="collapse" data-target="#collapse-smartwatch" style="cursor:pointer">
              Smartwatch <span style="float:right">&#9660;</span>
          </div>
          <div class="panel-body collapse" id="collapse-smartwatch">
            {{input-on-off label="Send Voice Message" checked=voiceMessage}}
          </div>
        </div>

        <div class="panel panel-primary">
      <div class="panel-heading">
        <strong class="panel-title">{{controllers.editor.model.wearable.label}}</strong>
      </div>
      <div class="panel-body plotted">
        {{view App.WearableView}}
      </div>
  </div>

      </div>
    </div>

    {{outlet}}
  </div>
</div>
