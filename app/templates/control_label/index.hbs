<div class="col-md-3">
  <div class="panel panel-info">
      <div class="panel-heading">
          <h3 class="panel-title">{{name}}</h3>
      </div>
      <div class="panel-body">
        {{partial "partials/first_commands"}}
        <ul class="nav nav-tabs">
          <li class="active"><a href="#home" data-toggle="tab"><i class="fa fa-pencil"></i></a></li>
          <li><a href="#position" data-toggle="tab"><i class="fa fa-arrows"></i></a></li>
          <li><a href="#dimension" data-toggle="tab"><i class="fa fa-expand"></i></a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane fade in active" id="home">
            {{input-text label="Name" value=name action='acceptChanges'}}
            {{input-text label="Title" value=title action='acceptChanges'}}
            {{input-color-picker label="Text Color" value=textColor action='acceptChanges'}}
            {{input-number min="8" max="24" label="Text Size" value=textSize action='acceptChanges'}}
            <div class="form-group">
              <label>Text Decoration</label>
              <br>
              <div class="btn-group">
                <label {{bind-attr class=":btn :btn-default textFont:active"}}>
                  {{input type="checkbox" checked=textFont class="hidden"}} <i class="fa fa-font"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default textBold:active"}}>
                  {{input type="checkbox" checked=textBold class="hidden"}} <i class="fa fa-bold"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default textItalic:active"}}>
                  {{input type="checkbox" checked=textItalic class="hidden"}} <i class="fa fa-italic"></i>
                </label>
              </div>
            </div>
            <div class="form-group">
              <label>Text Align</label>
              <br>
              <div class="btn-group">
                <label {{bind-attr class=":btn :btn-default textAlignLeft:active"}}>
                  {{input type="checkbox" checked=textAlignLeft class="hidden"}} <i class="fa fa-align-left"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default textAlignCenter:active"}}>
                  {{input type="checkbox" checked=textAlignCenter class="hidden"}} <i class="fa fa-align-center"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default textAlignRight:active"}}>
                  {{input type="checkbox" checked=textAlignRight class="hidden"}} <i class="fa fa-align-right"></i>
                </label>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="position">
            {{partial "partials/ui_control_position"}}
          </div>
          <div class="tab-pane fade" id="dimension">
            {{partial "partials/ui_control_dimension"}}
          </div>
        </div>
        
      </div>
      <div class="panel-footer">
         <div class="btn-group">
            <button type="button" class="btn btn-default" {{action "deleteUiControl"}}>
              <i class="fa fa-trash-o"></i> 
            </button>
          </div>
      </div>
  </div>
</div>